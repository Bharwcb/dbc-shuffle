<div class="container">

<h1>Homepage: Cohorts Index</h1>

<h4>Cohort Name</h4>

<ul class="list-group">
<% @cohorts.each do |cohort| %>
  <li class="list-group-item"><%= link_to "#{cohort.name} - #{cohort.location.try(:name)}", cohort_path(cohort) %></li>
<% end %>
</ul>

<h1 class="welcome-center">Welcome.</h1>

<h3>Recent Groups Generated:</h3>
<table class="table-of-cohorts">
  <tbody>
    <% @cohorts.each do |cohort| %>
        <td><%= link_to "#{cohort.name} - #{cohort.location.try(:name)}", cohort_path(cohort) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
