<%= form_for @cohort, url: cohorts_path  do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :location_id %><br>
    <!-- locations_helper - options needs [location name, location value] -->
    <%= f.select(:location_id, options_for_select(locations_for_select)) %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
